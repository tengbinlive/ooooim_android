<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="20dp"
    android:paddingLeft="35dp"
    android:paddingRight="35dp"
    android:paddingTop="20dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:background="@drawable/button_bg_theme"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/bottom_bt_height"
            android:lineSpacingExtra="7dp"
            android:gravity="center"
            android:text="您的帐号已失效\n请重新登录"
            android:textColor="@color/textcolor_theme"
            android:textSize="@dimen/font_btn" />

        <TextView
            android:layout_below="@+id/value"
            android:layout_marginTop="@dimen/content_gap_big"
            android:id="@+id/tv_ok"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottom_bt_height"
            android:layout_margin="@dimen/content_gap"
            android:gravity="center"
            android:text="@string/ok"
            android:textColor="@color/textcolor_theme"
            android:background="@drawable/button_bg_white"
            android:textSize="@dimen/font_btn"/>
    </RelativeLayout>


</LinearLayout>

