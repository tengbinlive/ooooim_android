<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="20dp"
    android:paddingLeft="35dp"
    android:paddingRight="35dp"
    android:paddingTop="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/button_bg_theme"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/content_gap_big"
            android:layout_marginRight="@dimen/content_gap_big"
            android:padding="35dp"
            android:textColor="@color/textcolor_theme"
            android:textSize="@dimen/font_btn" />

        <Button
            android:id="@+id/download"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="@dimen/button_height"
            android:layout_margin="@dimen/content_gap_big"
            android:background="@drawable/button_bg_pink"
            android:gravity="center"
            android:text="@string/download"
            android:textColor="@color/white"
            android:textSize="@dimen/font_medium" />

    </LinearLayout>

</LinearLayout>

